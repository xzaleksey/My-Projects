<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                style="@style/rl_main"
        >
    <ListView android:layout_width="match_parent" android:layout_height="wrap_content"
              android:id="@+id/lvMain"
              android:divider="@color/green"
              android:dividerHeight="2dp">
    </ListView>
    <Button android:id="@+id/btn_add" style="@style/btn_add"/>
    <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/btn_scroll_top"
            android:background="@drawable/ic_action_arrow_top" android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/padding" android:layout_marginRight="@dimen/padding"/>
</RelativeLayout>

